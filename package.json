{
    "name": "cardgen",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "dev:web": "turbo dev --filter=web",
        "dev:server": "turbo dev --filter=server",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "turbo": "latest"
    },
    "packageManager": "pnpm@8.9.0",
    "engines": {
        "node": ">=18"
    },
    "workspaces": [
        "apps/*"
    ]
}
